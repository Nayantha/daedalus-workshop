generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  salt      String
  avatar    String
  createdAt DateTime @default(now())
}

model Item {
  id            String       @id @default(uuid())
  images        String[]
  name          String
  description   String
  price         Float
  rarity        Rarity       @default(Common)
  rate          Rate         @default(F)
  requiredLevel Int          @default(1)
  itemType      ItemType
  createdAt     DateTime     @default(now())
  tags          TagsOnItem[]

  @@index([price])
  @@index([rarity])
  @@index([requiredLevel])
  @@index([itemType])
}

// Tagging system for filters
model Tag {
  id    String       @id @default(uuid())
  name  String       @unique
  items TagsOnItem[]
}

model TagsOnItem {
  item   Item   @relation(fields: [itemId], references: [id])
  tag    Tag    @relation(fields: [tagId], references: [id])
  itemId String
  tagId  String

  @@id([itemId, tagId])
}

enum Rarity {
  Common
  Uncommon
  Rare
  Epic
  Legendary
  Mythic
}

enum Rate {
  F
  E
  D
  C
  B
  A
  S
  X
}

enum ItemType {
  WEAPON
  WEARABLE
  CONSUMABLE
  MATERIAL
  ARTIFACT
}

enum WeaponType {
  SWORD
  AXE
  BOW
  STAFF
  DAGGER
}

enum WearableSlot {
  HEAD
  CHEST
  HANDS
  LEGS
  FEET
  BACK
  FINGER
}

enum MaterialType {
  METAL
  WOOD
  CLOTH
  GEMSTONE
  LEATHER
  HERB
}

enum TagType {
  MAGICAL
  CURSED
  ANCIENT
  BLESSED
  LIMITED
}
